{
  "manifest_version": 3,
  "name": "PFI Lender Dashboard",
  "version": "1.0",
  "description": "Chrome extension for PFI lender dashboard to view borrowers",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PFI Lender Dashboard"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}